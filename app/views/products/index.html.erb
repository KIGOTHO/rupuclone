<p id="notice"><%= notice %></p>
       <% @products.each do |product| %>
      <tr>
          <td><h1><%=link_to product.title, product %></h1></td>
          
                  <% if logged_in? %>

        <td><%= link_to 'Show', product, class: 'alink' %></td>
        <td><%= link_to 'Edit', edit_product_path(product), class: 'alink' %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'alink' %></td>
      </tr>

    <% end %>
    <% end %>
