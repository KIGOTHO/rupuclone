<header>

<% @products.each do |product| %>
      <tr>
          <td><h1><%=link_to product.title, product %></h1></td>
          
      </tr>
    <% end %>
        </header>

<p id="notice"><%= notice %></p>

<% if logged_in? %>

<h3>Items (<%= @product.items.size %>)</h3>
<% end %>

<%= render partial: 'products/item', collection: @product.items %>

<div class="form">
<%= render partial: 'items/form' %>
</div>
